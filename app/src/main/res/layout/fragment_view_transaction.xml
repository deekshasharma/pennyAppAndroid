<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <!--<ListView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/animalList"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true" />-->

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.38"
        android:text="MONTH"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="30dp"
        android:layout_alignTop="@+id/transaction"
        android:layout_toLeftOf="@+id/transaction"
        android:layout_toStartOf="@+id/transaction"
        android:layout_marginRight="107dp"
        android:layout_marginEnd="107dp" />

    <TextView
        android:id="@+id/transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginTop="79dp"
        android:text="TRANSACTIONS"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/month"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/month"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:text="YEAR"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/getMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="month"
        android:layout_above="@+id/month"
        android:layout_toLeftOf="@+id/transaction"
        android:layout_toStartOf="@+id/transaction"
        android:layout_marginRight="129dp"
        android:layout_marginEnd="129dp" />

    <TextView
        android:id="@+id/getTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/month"
        android:layout_alignLeft="@+id/transaction"
        android:layout_alignStart="@+id/transaction"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/getYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/year"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
